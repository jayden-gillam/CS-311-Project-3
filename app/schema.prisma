datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

model Ingredient {
  id    Int    @id @default(autoincrement())
  name  String @unique
  tags  String[]
}

model Method {
  id    Int    @id @default(autoincrement())
  name  String @unique
  tags  String[]
}

model Recipe {
  id         Int      @id @default(autoincrement())
  name       String
  imageUrl   String?
  steps      String[]
  likes      Int      @default(0)
  tags       Tag[]    @relation(references: [id])
  createdAt  DateTime @default(now())
}

model Tag {
  id    Int      @id @default(autoincrement())
  name  String   @unique
  recipes Recipe[]
}